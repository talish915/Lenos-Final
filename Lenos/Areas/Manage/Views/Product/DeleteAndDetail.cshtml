@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="col-lg-12 h3 mb-5 text-gray-800">
    <h1>Product Delete And Detail</h1>
</div>
<div class="row">
    @foreach (ProductImage productImage in Model.ProductImages.Where(pi => !pi.IsDeleted))
    {
        <div class="col-lg-2">
            <img style="width: 100%; border: 3px solid #E3A51E; border-radius:10px" src="~/assets/img/product/@productImage.Image" />
        </div>
    }
</div>
<div class="mt-5">
    <ul>
        <li class="mt-3">Title: <span class="text-warning">@Model.Title</span></li>
        <li class="mt-3">Price: <span class="text-warning">$ @Model.Price</span></li>
        <li class="mt-3">Discount Price: <span class="text-warning">$ @Model.DiscountPrice</span></li>
        <li class="mt-3">Count: <span class="text-warning">@Model.Count</span></li>
        <li class="mt-3">Description: <span class="text-warning">@Model.Description</span></li>
    </ul>
    <a class="btn btn-warning" asp-action="Update" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-route-id="@Model.Id">Update</a>
    <a class="btn btn-danger" asp-action="DeleteProduct" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-route-id="@Model.Id">Delete</a>
</div>
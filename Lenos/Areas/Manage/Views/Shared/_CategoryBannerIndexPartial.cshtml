@model IEnumerable<CategoryBanner>
@{ int count = (ViewBag.PageIndex - 1) * 3; }


<div class="row">
    @foreach (CategoryBanner categoryBanner in Model)
    {
        count++;
        <div class="col-lg-4 mb-5">
            <div class="border py-3 px-3">
                <div style="position: relative" class="slider">
                    <img style="width: 100%; height: 420px; object-fit:cover" src="~/assets/img/category-banner/@categoryBanner.Image" alt="Alternate Text" />
                    <h2 style="bottom: 30px; left: 0; width: 100%" class="position-absolute text-center text-white">@categoryBanner.Title</h2>
                </div>
                <div class="mt-4 align-items-center d-flex justify-content-between">
                    <a class="btn btn-warning w-25" asp-action="Update" asp-route-id="@categoryBanner.Id">Update</a>
                    <h1 style="border-radius: 25%" class="px-2 user-select-none mx-auto d-inline border my-2">@count</h1>
                    <a id="@(categoryBanner.IsDeleted ? "restoreCategory":"deleteCategory")" class="btn w-25 @(categoryBanner.IsDeleted ? "btn-primary":"btn-danger")" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-action="@(categoryBanner.IsDeleted ? "Restore":"Delete")" asp-route-id="@categoryBanner.Id">@(categoryBanner.IsDeleted ? "Restore":"Delete")</a>
                </div>
            </div>
        </div>
    }
</div>
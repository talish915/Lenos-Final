@model IEnumerable<Banner>
@{ int count = (ViewBag.PageIndex - 1) * 2; }

<div class="row">
    @foreach (Banner banner in Model)
    {
        count++;
        <div class="col-lg-12 border py-3 mb-5 bg-white">
            <div style="position: relative" class="banner">
                <img style="width: 100%" src="~/assets/img/banner/@banner.Image" alt="Alternate Text" />
                <div style="position: absolute; left: 50%;transform: translateX(-50%); top: 20%; width: 50%;" class="banner-content text-center">
                    <h4 style="color: #fff">@banner.Title</h4>
                    <h1 style="margin: 3rem 0; color: #fff; font-size: 55px;">@banner.SubTitle</h1>
                    <a style="padding: 13px 30px; background-color: #fff; color: #1A1A1A; transition: all 0.3s; text-decoration: none; font-weight: 600; font-size: 15px;" href="#">PRE - ORDER NOW</a>
                </div>
            </div>
            <div class="mt-4 align-items-center d-flex justify-content-between">
                <a class="btn btn-warning w-25" asp-action="Update" asp-route-id="@banner.Id">Update</a>
                <h1 style="border-radius: 25%" class="px-2 user-select-none mx-auto d-inline border my-2">@count</h1>
                <a id="@(banner.IsDeleted ? "restoreCategory":"deleteCategory")" class="btn w-25 @(banner.IsDeleted ? "btn-primary":"btn-danger")" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-action="@(banner.IsDeleted ? "Restore":"Delete")" asp-route-id="@banner.Id">@(banner.IsDeleted ? "Restore":"Delete")</a>
            </div>
        </div>
     }
</div>
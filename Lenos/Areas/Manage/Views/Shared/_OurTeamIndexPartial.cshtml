@model IEnumerable<OurTeam>
@{ int count = (ViewBag.PageIndex - 1) * 3; }


<div class="row">
    @foreach (OurTeam ourTeam in Model)
    {
        count++;
        <div class="col-lg-4 mb-5">
            <div class="border py-3 px-3">
                <div>
                    <img style="width: 100%; height: 420px; object-fit:cover" src="~/assets/img/about/@ourTeam.Image" alt="Alternate Text" />
                </div>
                <div class="mt-3">
                    <p>@ourTeam.Position</p>
                    <h2>@ourTeam.FullName</h2>
                </div>
                <div class="mt-4 align-items-center d-flex justify-content-between">
                    <a class="btn btn-warning w-25" asp-action="Update" asp-route-id="@ourTeam.Id">Update</a>
                    <h1 style="border-radius: 25%" class="px-2 user-select-none mx-auto d-inline border my-2">@count</h1>
                    <a id="@(ourTeam.IsDeleted ? "restoreCategory":"deleteCategory")" class="btn w-25 @(ourTeam.IsDeleted ? "btn-primary":"btn-danger")" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex" asp-action="@(ourTeam.IsDeleted ? "Restore":"Delete")" asp-route-id="@ourTeam.Id">@(ourTeam.IsDeleted ? "Restore":"Delete")</a>
                </div>
            </div>
        </div>
    }
</div>
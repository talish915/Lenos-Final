@model MemberUpdateVM
<h3>Account Details</h3>
<div class="account-details-form">
    <form asp-action="Edit" asp-controller="Account" method="post">
        <div class="row">
            <div class="col-lg-12">
                <div class="single-input-item">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Full Name</label>
                    <input asp-for="FullName" placeholder="Full Name" />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Email</label>
                    <input asp-for="Email" placeholder="Full Name" />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Username</label>
                    <input asp-for="UserName" placeholder="Username" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Phone</label>
                    <input asp-for="PhoneNumber" placeholder="Phone" />
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Address</label>
                    <input asp-for="Address" placeholder="Address" />
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Country</label>
                    <input asp-for="Country" placeholder="Country" />
                    <span class="text-danger" asp-validation-for="Country"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>City</label>
                    <input asp-for="City" placeholder="City" />
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>State</label>
                    <input asp-for="State" placeholder="State" />
                    <span class="text-danger" asp-validation-for="State"></span>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="single-input-item">
                    <label>Zip Code</label>
                    <input asp-for="ZipCode" placeholder="Zip Code" />
                    <span class="text-danger" asp-validation-for="ZipCode"></span>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="w-100 mt-5"><h3>Change Password</h3></div>
            </div>
            <div class="col-lg-12">
                <div class="single-input-item">
                    <label>Current Password</label>
                    <input asp-for="CurrentPassword" placeholder="Current Password" />
                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Password</label>
                    <input asp-for="Password" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label>Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div>
        <div class="single-input-item">
            <button class="check-btn sqr-btn ">Save Changes</button>
        </div>
    </form>
</div>
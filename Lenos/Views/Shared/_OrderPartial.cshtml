@model OrderVM
<form id="orderForm" method="post">
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="FullName">Fullname</label>
                <input type="text" asp-for="FullName" placeholder="Fullname" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="Email">Email</label>
                <input type="text" asp-for="Email" placeholder="Email" />
            </div>
        </div>
        <div class="col-lg-12">
            <div class="single-input-item">
                <label asp-for="Address">Address</label>
                <input type="text" asp-for="Address" placeholder="Address" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="Country">Country</label>
                <input type="text" asp-for="Country" placeholder="Country" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="City">City</label>
                <input type="text" asp-for="City" placeholder="City" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="State">Last Name</label>
                <input type="text" asp-for="State" placeholder="State" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="ZipCode">Zip Code</label>
                <input type="text" asp-for="ZipCode" placeholder="Zip Code" />
            </div>
        </div>
        <div class="col-lg-12 mt-4">
            <button class="btn btn-success" type="submit" form="orderForm">PLACE ORDER</button>
        </div>
    </div>
</form>
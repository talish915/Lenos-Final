@model AccountVM
@{
    ViewData["Title"] = "ResetPassword";
}

<main id="main" class="mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mx-auto">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i style="color: #AE845F" class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">New Password</h2>
                            <p>You can reset your password here.</p>
                            <div class="panel-body">
                                <form class="form" method="post">
                                    <fieldset>
                                        <input style="visibility:hidden;" asp-for="@Model.AppUser.Email"/>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                <input asp-for="Password" placeholder="New Password" class="form-control" type="password" required="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" type="password" required="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input style="color: #fff; font-weight: 500; background-color: #AE845F" class="btn btn-lg btn-block" value="SUBMIT" type="submit">
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
